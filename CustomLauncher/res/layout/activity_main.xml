<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.shiwei.launcher"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/main_background"
    tools:context=".Launcher"
    tools:ignore="MergeRootFrame" >
       <!-- 
    <com.shiwei.launcher.BatteryView
        android:id="@+id/verticalBattery"
        android:layout_width="14dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryOrientation="vertical"
        />
 	-->

       <com.shiwei.launcher.BatteryView
           android:id="@+id/batteryView"
           android:layout_width="200dp"
           android:layout_height="80dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginBottom="0dp"
           android:layout_marginRight="0dp"
           android:background="#fff"
           android:gravity="center"
           android:src="@drawable/batt_10" />

       <ImageView
           android:id="@+id/nosdcardwarning"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="100dp"
           android:src="@drawable/insert_cart_red" />
       
		<FrameLayout
           android:id="@+id/app_framelayout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="100dp"
           android:visibility="invisible"
           android:background="#FFFFFF" >

           <ImageView
               android:id="@+id/ins_unins_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/loading_1" />
<!-- android:layout_gravity="center" -->
       </FrameLayout>

		<TextView
		    android:id="@+id/versionTV"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginBottom="30dp"
		    android:layout_marginLeft="60dp"
		    android:text="@string/version"
		    android:textColor="#000000"
		    android:textSize="40sp" />

		<FrameLayout
		    android:id="@+id/usbstateView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="0dp"
		    android:layout_marginTop="0dp"
		    android:background="@drawable/usb_connected"
		    android:visibility="invisible" >
		</FrameLayout>

</RelativeLayout>
